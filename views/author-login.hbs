<div class="row">
  <div class="col-6">
    <h1>Author Login</h1>
  </div>
</div>
<form class="row g-3 needs-validation" method="POST" action="/authorLogin" novalidate>

<div class="col-6">
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="floatingInput" value="{{this.email}}" placeholder="email@email.com" name="email">
    <label for="floatingInput">Email</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.password}}" placeholder="Password" name="password">
    <label for="floatingInput">Password</label>
  </div>
</div>

<div class="col-3 d-grid">
  <button class="btn btn-primary" type="submit">Submit</button>
</div>
</form>
