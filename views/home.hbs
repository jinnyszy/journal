{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<div class="alert alert-success alert-dismissible" role="alert">
  You have new alerts
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<div class="card">
  <div class="card-header">
   Dashboard <b>Editor</b>
  </div>
  <div class="card-body">
    <h5 class="card-title">Welcome</h5>
    <p class="card-text">You have successfully login</p>
    <a class="btn btn-lg btn-primary" aria-current="page" href="/author">Authors</a>
    <a class="btn btn-lg btn-primary" aria-current="page" href="/reviewer">Reviewers</a>
    <a href="/logout" class="btn btn-outline-primary float-end">Logout</a>

  </div>
</div>

<div class="row">
  <div class="col-6">
    <h3>Current Trends</h3>
    <div id="piechart" style="width: 400px; height: 300px;"></div>
  </div>
    <div class="col-6">
  <h3>Late Submissions</h3>
    <div id="chart_div" style="width: 700px; height: 300px;"></div>
  </div>
</div>



<div class="row">
  <div class="col-6">
    <h1>Manuscripts</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addmanuscript" type="button" class="btn btn-primary align-self-center">+ add manuscripts</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Author</th>
      <th scope="col">Content</th>
      <th scope="col">ID</th>
      <th scope="col">Points</th>
      <th scope="col">Reviewer</th>
      <th scope="col">Status</th>
      <th scope="col">Title</th>
      <th scope="col">Topic</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <td>{{this.author}}</th>
      <td>{{this.content}}</td>
      <td>{{this.ID}}</td>
      <td>{{this.point}}</td>
      <td>{{this.reviewer}}</td>
      <td>{{this.status}}</td>
      <td>{{this.title}}</td>
      <td>{{this.topic}}</td>
      <td class="text-end">
        <a href="/viewMan/{{this.ID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
        <a href="/editManuscript/{{this.ID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="/deleteManuscript/{{this.ID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
        <a href="" type="button" class="btn btn-light btn-small"><i class="bi bi-arrow-bar-up"></i>Publish</a>

      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
